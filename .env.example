# Company Branding Configuration
# These values will be used throughout the application for company-specific branding

# Company name displayed in the UI
COMPANY_NAME="DTIQ"
NEXT_PUBLIC_COMPANY_NAME="DTIQ"

# Company slug used in URLs and identifiers (lowercase, no spaces)
COMPANY_SLUG="dtiq"
NEXT_PUBLIC_COMPANY_SLUG="dtiq"

# Primary brand color in hex format
COMPANY_PRIMARY_COLOR="#0066CC"
NEXT_PUBLIC_COMPANY_PRIMARY_COLOR="#0066CC"

# Optional: URL to company logo (can be absolute or relative)
COMPANY_LOGO_URL=""
NEXT_PUBLIC_COMPANY_LOGO_URL=""

# Database Configuration
# For Docker (recommended for local development):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_support_dashboard"
# For cloud/production, replace with your actual database URL:
# DATABASE_URL="postgresql://user:password@host:5432/dbname?schema=public"

# Claude AI API Configuration
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY="sk-ant-..."

# Firebase Configuration (for Authentication)
# Get these values from Firebase Console > Project Settings > General > Your apps
# Client-side configuration (NEXT_PUBLIC_ prefix makes them available in browser)
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-app.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-app.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin SDK Configuration (for server-side authentication)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# IMPORTANT: Keep the private key secure and never commit it to version control
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project-id.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Optional: Additional Configuration
# NODE_ENV="development"
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-secret-key-here"
